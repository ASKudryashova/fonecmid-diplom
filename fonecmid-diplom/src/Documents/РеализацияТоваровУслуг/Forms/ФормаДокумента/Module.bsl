&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	
	ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество;
	
	РассчитатьСуммуДокумента();
	
КонецПроцедуры

&НаКлиенте
Процедура РассчитатьСуммуДокумента()
	
	Объект.СуммаДокумента = Объект.Товары.Итог("Сумма") + Объект.Услуги.Итог("Сумма");
	
КонецПроцедуры

//ВКМ Кудряшова А.С. продолжение команды "Заполнить"
&НаСервере
Процедура ВКМ_ЗаполнитьНаСервере()
	
	Данные = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(Объект.Договор, "ВидДоговора, ВКМ_ПериодДействияНачало, ВКМ_ПериодДействияКонец");
		
	Если Данные.ВидДоговора = Перечисления.ВидыДоговоровКонтрагентов.ВКМ_АбонентскоеОбслуживание Тогда
		
		Если Данные.ВКМ_ПериодДействияНачало <= Объект.Дата И Данные.ВКМ_ПериодДействияКонец >= Объект.Дата Тогда
			ДокументОбъект = РеквизитФормыВЗначение("Объект");
			ДокументОбъект.ВКМ_ВыполнитьАвтозаполнение();
			ЗначениеВРеквизитФормы(ДокументОбъект, "Объект");
		Иначе
			ТекстСообщения = СтрШаблон("Дата документа не находится в пределах периода действия договора. Период действия договора: с %1 по %2.",
				Формат(Данные.ВКМ_ПериодДействияНачало, "ДФ=dd.MM.yyyy;"), Формат(Данные.ВКМ_ПериодДействияКонец, "ДФ=dd.MM.yyyy;"));
			ОбщегоНазначения.СообщитьПользователю(ТекстСообщения);
		КонецЕсли;
	
	Иначе
		ТекстСообщения = СтрШаблон("Указан неверный вид договора: ""%1"". Автозаполнение документа предназначено только для договоров вида ""%2"".", 
			Данные.ВидДоговора, Перечисления.ВидыДоговоровКонтрагентов.ВКМ_АбонентскоеОбслуживание);
		ОбщегоНазначения.СообщитьПользователю(ТекстСообщения);
	
	КонецЕсли;

КонецПроцедуры 
